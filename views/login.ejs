<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/login.css">
    <title>Login</title>
</head>
<body>
    <button class="createButton">
        <a href="http://localhost:3000/create">Opret bruger</a>
    </button>
    
    <p id="errortext"></p>
    <form id="myform">
        <div class="form-group">
            <label for="email">Email: </label>
            <input type="email" id="email" name="email" placeholder="skriv email" value = "what@gmail.com" required>
        </div>
        <div class="form-group">
            <label for="password">Adgangskode: </label>
            <input type="password" id="password" name="password" placeholder="Skriv adgangskode" value = "1234" required>
        </div>
        <button type="submit">Login</button>
    </form>
    <script>
        const formElements = document.getElementById('myform');

        formElements.addEventListener('submit', event => {
            event.preventDefault();
            let formdata = new FormData(formElements);
            
            //transforms a list of key-value pairs into an object and into json
            let data = JSON.stringify(Object.fromEntries(formdata.entries()));
            //fetchLoginWithHeaders(data)
            fetchLoginWithCookies(data)
        });

        async function fetchLoginWithCookies(data) {
            let result = await fetch('/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: data,
            });

            if(result.ok) {
                console.log(result)
                document.getElementById('errortext').textContent = await result.json()
                setTimeout(function () {
                    window.location.replace('http://localhost:3000/')
                }, 2000)
            } else {
                document.getElementById('errortext').textContent = await result.json()
            }
        }

        async function fetchLoginWithHeaders(data) {
            let result = await fetch('/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: data,
            });

            if(result.ok) {
                document.getElementById('errortext').textContent = "Login approved"
                document.cookie = `Authorization=${ await result.json()}; max-age7200;`;
                setTimeout(function () {
                    window.location.replace('http://localhost:3000/')
                }, 2000)
            } else {
                document.getElementById('errortext').textContent = await result.json()
            }
        }

    </script>
</body>
</html>